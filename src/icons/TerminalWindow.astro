---
const iconGradientId = 'icon-gradient-' + Math.round(Math.random() * 10e12).toString(36)
---
<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" style={'--size:1.6em '} stroke=`url(#${iconGradientId})` fill=`url(#${iconGradientId})`>
    <path fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 15h-5m-5-5l3 2.5L7 15m-4 .8V8.2c0-1.12 0-1.68.218-2.108c.192-.377.497-.682.874-.874C4.52 5 5.08 5 6.2 5h11.6c1.12 0 1.68 0 2.107.218c.377.192.683.497.875.874c.218.427.218.987.218 2.105v7.606c0 1.118 0 1.677-.218 2.104a2.003 2.003 0 0 1-.875.875c-.427.218-.986.218-2.104.218H6.197c-1.118 0-1.678 0-2.105-.218a2.001 2.001 0 0 1-.874-.875C3 17.48 3 16.92 3 15.8Z"/>
    <linearGradient
        id={iconGradientId}
        x1="2"
        x2="23"
        y1="4"
        y2="20"
        gradientUnits="userSpaceOnUse"
    >
        <stop stop-color="var(--gradient-stop-1)" />
        <stop offset=".5" stop-color="var(--gradient-stop-2)" />
        <stop offset="1" stop-color="var(--gradient-stop-3)" />
    </linearGradient>
</svg>

<style>
	svg {
		vertical-align: middle;
		width: var(--1.6em, 1em);
		height: var(--1.6em, 1em);
	}
</style>